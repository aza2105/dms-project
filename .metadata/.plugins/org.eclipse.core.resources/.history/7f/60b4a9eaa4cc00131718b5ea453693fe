import java.io.BufferedReader;
import java.io.FileInputStream;
import java.io.FileNotFoundException;
import java.io.FileReader;
import java.io.IOException;
import java.util.Scanner;


public class score {
	int count;
	String text;
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int len_args = args.length;
		Scanner s = new Scanner(System.in);

		while(true){
			displn("Please make your selection:");
			displn("1. Rate an Article");
			displn("2. Quit");
			disp("End your choice : ");
			int choice = s.nextInt();
			switch(choice){
				case 1:
				rate_art();
				break;
				case 2:
				System.exit(0);;
				break;
			}


		}
	}

	private static void rate_art() {
		// TODO Auto-generated method stub
		Scanner x = new Scanner(System.in);
		
		
		while(true){
			displn("Please make your selection:");
			displn("1. Rate an Article");
			displn("2. Quit");
			disp("End your choice : ");
			int choice = x.nextInt();
			switch(choice){
				case 1:
				rate_art();
				break;
				case 2:
				System.exit(0);;
				break;
			}
		}
	}

	private static void read_file() throws IOException{
		BufferedReader br = new BufferedReader(new FileReader("input.txt"));
	    try {
	        StringBuilder sb = new StringBuilder();
	        String line = br.readLine();

	        while (line != null) {
	            sb.append(line);
	            sb.append(System.lineSeparator());
	            line = br.readLine();
	        }
	        String everything = sb.toString();
	    } finally {
	        br.close();
	    }
	    
	    return everything;
		
	}
	public static void displn(String s){
		System.out.println(s);
	}

	public static void disp(String s){
		System.out.print(s);
	}

}


